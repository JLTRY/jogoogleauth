<?xml version="1.0" encoding="UTF-8"?>
<extension type="plugin" group="user" method="upgrade">
	<name>PLG_JOGOOGLEAUTH</name>
	<author>JL TRYOEN</author>
	<creationDate>2023-08</creationDate>
	<copyright>(C) 2023 JL TRYOEN</copyright>
	<license>GNU General Public License version 3 or later; see LICENSE.txt</license>
	<authorEmail>jltryoen@orange.fr</authorEmail>
	<authorUrl>www.jltryoen.fr</authorUrl>
	<version>1.0.0</version>
	<description>PLG_JOGOOGLEAUTH_DESCRIPTION</description>
	<namespace path="src">JLTRY\Plugin\User\JOGoogleAuth</namespace>
	<files>
		<folder plugin="jogoogleauth">services</folder>
		<folder>src</folder>
		<folder>language</folder>
	</files>
	<media destination="plg_jogoogleauth" folder="media">
		<filename>joomla.asset.json</filename>
		<folder>js</folder>
		<folder>css</folder>
	</media>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="loginredirectchoice"
					type="radio"
					class="btn-group btn-group-yesno"
					default="1"
					label="PLG_JOGOOGLEAUTH_FIELD_LOGIN_REDIRECT_CHOICE_LABEL"
					description="PLG_JOGOOGLEAUTH_FIELD_LOGIN_REDIRECT_CHOICE_DESC">
						<option value="1">PLG_JOGOOGLEAUTH_FIELD_LOGIN_MENUITEM</option>
						<option value="0">PLG_JOGOOGLEAUTH_FIELD_LOGIN_URL</option>
				</field>
				<field
					name="login_redirect_url"
					type="text"
					label="JFIELD_LOGIN_REDIRECT_URL_LABEL"
					description="JFIELD_LOGIN_REDIRECT_URL_DESC"
					class="inputbox"

					field="login_redirect_menuitem"
					hint="PLG_JOGOOGLEAUTH_FIELD_LOGIN_REDIRECT_PLACEHOLDER"
					message="PLG_JOGOOGLEAUTH_FIELD_LOGIN_REDIRECT_ERROR"
					showon="loginredirectchoice:0"/>
				<field
					name="login_redirect_menuitem"
					type="menuitem"
					disable="separator,alias,heading,url"
					label="PLG_JOGOOGLEAUTH_FIELD_LOGIN_REDIRECTMENU_LABEL"
					description="PLG_JOGOOGLEAUTH_FIELD_LOGIN_REDIRECTMENU_DESC"
					showon="loginredirectchoice:1">
					<option value="">JDEFAULT</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
